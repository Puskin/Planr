<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
         
<p>
  <a href="<%= @post.picture.url %>" target="_blank"><%= image_tag @post.picture.url(:medium) %></a>  
</p>  

<p>
    <ul>
	<% @categories.each do |category| %>
   		<li><%= category.name %></li>
   <% end %>
	</ul>
</p>	  

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
