<h2><%= @post.title %></h2>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
         
<p>
  <a href="<%= @post.picture.url %>" target="_blank"><%= image_tag @post.picture.url(:medium) %></a>  
</p>  

<p>
    <ul>
	<% @categories.each do |category| %>
   		<li><%= category.name %></li>
   <% end %>
	</ul>
</p>	  

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
          
<h2>Komentarze (<%= @post.comments.count %>)</h2>
<%= render :partial => @post.comments %>

<% form_for [@post, Comment.new] do |f| %>
	<%= f.text_area :body %>
	<%= f.submit "Dodaj komentarz" %>
<% end %>	