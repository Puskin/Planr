<!DOCTYPE html>
<html>
<head>
  <title>Planr</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>    
	
<%= render 'layouts/header' %>     

<% flash.each do |name, msg| %>
	<%= content_tag :div, msg, :id => "#{name}", :class => "flash" %>
<% end %>	

<%= yield %>

</body>
</html>
